{
  "permissions": {
    "allow": [
      "Bash(bazel build:*)",
      "Bash(bazel aquery:*)",
      "Bash(bazel cquery:*)",
      "Bash(bazel query:*)",
      "Bash(bazel run:*)",
      "Bash(bazel test:*)",
      "Bash(cat:*)",
      "Bash(mkdir:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:jules.google)",
      "Bash(find:*)"
    ],
    "deny": [],
    "additionalDirectories": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bazel run //:format"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/bazel-validate.sh"
          }
        ]
      }
    ]
  }
}
