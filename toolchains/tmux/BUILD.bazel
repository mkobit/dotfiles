package(default_visibility = ["//visibility:public"])

# Toolchain type for tmux
toolchain_type(
    name = "toolchain_type",
    visibility = ["//visibility:public"],
)

# Export the toolchain files
exports_files([
    "toolchain.bzl",
    "extensions.bzl",
])

# This filegroup allows the toolchain implementation to reference these files
filegroup(
    name = "all_files",
    srcs = glob(["**"]),
    visibility = ["//visibility:public"],
)
