// https://code.visualstudio.com/docs/devcontainers/create-dev-container
{
    "name": "Bazel development",
    "image": "mcr.microsoft.com/devcontainers/java:1-21",
    "features": {
        "ghcr.io/devcontainers-community/features/bazel:1": {
            "bazelisk_version": "v1.27.0",
            "buildifier_version": "v8.2.1"
        },
        "ghcr.io/anthropics/devcontainer-features/claude-code:1": {},
        "ghcr.io/devcontainers/features/github-cli:": {},
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers-extra/features/apt-get-packages:1": {
            "clean_ppas": true,
            "packages": [
                "gnupg2",
                "build-essential"
            ]
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "bazelbuild.vscode-bazel",
                "ms-vscode.vscode-json",
                "redhat.vscode-yaml",
                "ms-vscode.vscode-typescript-next",
                "ms-python.python",
                "golang.go",
                "sumneko.lua"
            ],
            "settings": {
                "dev.containers.experimentalLockfile": true,
                "gopls": {
                    "templateExtensions": ["tmpl"]
                },
                "[gotmpl]": {
                    "editor.defaultFormatter": "golang.go"
                },
                "Lua.workspace.library": [
                    "${3rd}/love2d/library",
                    "${3rd}/busted/library"
                ],
                "Lua.workspace.checkThirdParty": false,
                "Lua.workspace.maxPreload": 5000,
                "Lua.workspace.preloadFileSize": 1000,
                "Lua.workspace.userThirdParty": [],
                "Lua.workspace.ignoreDir": [
                    ".vscode",
                    ".git",
                    "node_modules"
                ],
                "Lua.workspace.useGitIgnore": true,
                "Lua.hint.enable": true,
                "Lua.hint.paramType": true,
                "Lua.hint.setType": true,
                "Lua.hint.paramName": "All",
                "Lua.hint.arrayIndex": "Auto",
                "Lua.hint.paramHints": true,
                "Lua.hint.variableHints": true,
                "Lua.hint.returnTypeHints": true,
                "Lua.hint.fieldHints": true,
                "[lua]": {
                    "editor.defaultFormatter": "sumneko.lua",
                    "editor.tabSize": 4,
                    "editor.insertSpaces": true
                },
                "files.associations": {
                    "*.tmpl": "gotmpl",
                    "**/hammerspoon/**/*.lua": "lua",
                    "**/nvim/**/*.lua": "lua",
                    "**/.config/hammerspoon/**/*.lua": "lua",
                    "**/.config/nvim/**/*.lua": "lua"
                }
            }
        },
        "codespaces": {
            "disableAutomaticConfiguration": true
        }
    },
    "postCreateCommand": "bazel --version"
}
