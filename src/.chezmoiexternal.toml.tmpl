# chezmoi external files configuration - downloads external files
# See: https://www.chezmoi.io/reference/special-files/chezmoiexternal-format/
# See: https://www.chezmoi.io/user-guide/include-files-from-elsewhere/

{{ if false }}
[".local/bin/bazelisk"]
type = "file"
url = "https://github.com/bazelbuild/bazelisk/releases/download/v{{ .bazelisk.version }}/bazelisk-{{ .chezmoi.os }}-{{ .chezmoi.arch }}"
checksum = "sha256:{{ index .bazelisk.checksums (printf "%s_%s" .chezmoi.os .chezmoi.arch) }}"
executable = true

[".local/bin/fzf"]
type = "archive-file"
url = "https://github.com/junegunn/fzf/releases/download/v{{ .fzf.version }}/fzf-{{ .fzf.version }}-{{ .chezmoi.os }}_{{ .chezmoi.arch }}.tar.gz"
checksum = "sha256:{{ index .fzf.checksums (printf "%s_%s" .chezmoi.os .chezmoi.arch) }}"
path = "fzf"
executable = true

[".local/bin/rg"]
type = "archive-file"
url = "https://github.com/BurntSushi/ripgrep/releases/download/{{ .ripgrep.version }}/ripgrep-{{ .ripgrep.version }}-{{ if eq .chezmoi.os "darwin" }}{{ .chezmoi.arch }}-apple-darwin{{ else }}{{ .chezmoi.arch }}-unknown-linux-musl{{ end }}.tar.gz"
path = "ripgrep-{{ .ripgrep.version }}-{{ if eq .chezmoi.os "darwin" }}{{ .chezmoi.arch }}-apple-darwin{{ else }}{{ .chezmoi.arch }}-unknown-linux-musl{{ end }}/rg"
executable = true

[".local/bin/bat"]
type = "archive-file"
url = "https://github.com/sharkdp/bat/releases/download/v{{ .bat.version }}/bat-v{{ .bat.version }}-{{ if eq .chezmoi.os "darwin" }}{{ .chezmoi.arch }}-apple-darwin{{ else }}{{ .chezmoi.arch }}-unknown-linux-gnu{{ end }}.tar.gz"
path = "bat-v{{ .bat.version }}-{{ if eq .chezmoi.os "darwin" }}{{ .chezmoi.arch }}-apple-darwin{{ else }}{{ .chezmoi.arch }}-unknown-linux-gnu{{ end }}/bat"
executable = true

[".local/bin/zoxide"]
type = "archive-file"
url = "https://github.com/ajeetdsouza/zoxide/releases/download/v{{ .zoxide.version }}/zoxide-{{ .zoxide.version }}-{{ if eq .chezmoi.os "darwin" }}{{ .chezmoi.arch }}-apple-darwin{{ else }}{{ .chezmoi.arch }}-unknown-linux-musl{{ end }}.tar.gz"
path = "zoxide"
executable = true
{{ end }}