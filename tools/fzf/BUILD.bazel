load("//modules/rules:dotfile.bzl", "dotfile", "dotfile_group")

package(default_visibility = ["//visibility:public"])

# Create fzf config dotfile
dotfile(
    name = "fzf_config_dotfile",
    src = "//modules/fzf:fzfconfig",
    dest = "~/.fzf.config.sh",
)

# Group all fzf dotfiles
dotfile_group(
    name = "fzf_dotfiles",
    deps = [
        ":fzf_config_dotfile",
    ],
)